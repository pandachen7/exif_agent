# EXIF Agent Configuration File
# 設定檔 - 請依照實際需求修改
# 使用前請將此檔案複製為 config.yaml

# 路徑設定
path:
  # 多媒體資料夾路徑
  input: ""
  # 輸出路徑
  output: "./output"

# 處理設定
processing:
  # 時間間隔 (分鐘) - 用於計算有效照片數
  # 預設: 30 分鐘
  default_time_interval: 30

  # OCR 引擎 (easyocr / tesseract)
  ocr_engine: "easyocr"

  # 同一照片多物種時，OI 貢獻最大值為 1
  # true = 最大值為 1，false = 依實際物種數計算
  oi_max_one: true

# 資料庫設定
database:
  # 是否儲存到 Access DB (需安裝 Microsoft Access Database Engine)
  save_access_db: true

  # 是否儲存到 SQLite
  save_sqlite: true

  # Access DB 檔案名稱
  access_db_name: "exif_data.accdb"

  # SQLite 檔案名稱
  sqlite_db_name: "exif_data.sqlite"

  # Excel 檔案名稱
  excel_file_name: "exif_data.xlsx"

  # CSV 檔案名稱
  csv_file_name: "exif_data.csv"
